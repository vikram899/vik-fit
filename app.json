{
  "expo": {
    "name": "VikFit",
    "slug": "vik-fit",
    "owner": "vikram0211",
    "version": "1.0.0",
    "description": "A simple, modern fitness tracking app",
    "runtimeVersion": "54.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTabletMode": true,
      "bundleIdentifier": "com.vikfit.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSHealthShareUsageDescription": "We need access to your health data to sync your step count from Apple Health.",
        "NSHealthUpdateUsageDescription": "We would like to read your health data including step count.",
        "UIRequiredDeviceCapabilities": [
          "healthkit",
          "healthkit"
        ],
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.vikfit.app",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "vikfit",
    "plugins": [
      [
        "react-native-health",
        {
          "permissions": [
            "HKQuantityTypeIdentifierStepCount"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "c23cfad6-6491-4580-a7a4-dd1d8f03d2c2"
      }
    }
  }
}
